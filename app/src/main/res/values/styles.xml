<resources>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Style for the time period selectors (1W, 1M, etc.) -->
    <style name="PeriodTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the SELECTED time period selector -->
    <style name="PeriodTextStyle.Selected">
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">@drawable/orange_dot</item>
    </style>

    <!-- Style for the big stat numbers -->
    <style name="StatValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the small stat labels -->
    <style name="StatLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for the day items in the weekly review card -->
    <style name="DayOfWeekContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- The text (Day and Date) -->
    <style name="DayOfWeekText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- The colored status dot -->
    <style name="DayOfWeekDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>


    <!-- Style for the achievement icons -->
    <style name="AchievementIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:alpha">0.5</item> <!-- Makes them look "unlocked" -->
    </style>

    <style name="SettingsItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/settings_item_background</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint">@android:color/darker_gray</item>
    </style>

    <style name="ProfileValueStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/value_background</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

        <style name="SettingsRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
            <!-- Lays out the buttons evenly in the RadioGroup -->
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>

            <!-- Hides the default circular radio button -->
            <item name="android:button">@null</item>

            <!-- Sets our custom circle drawable on top of the text -->
            <item name="android:drawableTop">@drawable/radio_selector</item>
            <item name="android:drawablePadding">8dp</item>

            <!-- Centers the text and drawable -->
            <item name="android:gravity">center</item>

            <!-- Sets the text appearance -->
            <item name="android:textColor">#8E8E93</item>
            <item name="android:textSize">14sp</item>
        </style>

    <!-- In res/values/styles.xml -->
    <style name="ReminderLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReminderTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#AEAEB2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReminderSwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ReminderDividerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">#505050</item>
    </style>

    <!-- Style for the statistics TextViews on the profile screen (Posts, Followers, etc.) -->
    <style name="ProfileStat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
