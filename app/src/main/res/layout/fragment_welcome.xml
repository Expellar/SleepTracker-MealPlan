<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeFragment">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcoming_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Semi-Transparent Overlay for Text Readability -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VITAHABIT"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/moon_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.6"/>

    <!-- Moon Icon (Sleep Tracker) -->
    <ImageView
        android:id="@+id/moon_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_moon"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:tint="#FF9800"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintBottom_toTopOf="@+id/sloganDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/meal_plan_icon"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <!-- Meal Plan Icon -->
    <ImageView
        android:id="@+id/meal_plan_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_meal_plan"
        android:layout_marginStart="16dp"
        app:tint="#FF9800"
        app:layout_constraintTop_toTopOf="@id/moon_icon"
        app:layout_constraintBottom_toBottomOf="@id/moon_icon"
        app:layout_constraintStart_toEndOf="@id/moon_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Slogan Divider -->
    <View
        android:id="@+id/sloganDivider"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:background="#FF9800"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/moon_icon"
        app:layout_constraintBottom_toTopOf="@+id/slogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Slogan -->
    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build Strength, Build Habits, Build You"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/sloganDivider"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#E0E0E0"
        android:text="       START"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_arrow_forward_black"
        app:iconGravity="end"
        app:iconTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

