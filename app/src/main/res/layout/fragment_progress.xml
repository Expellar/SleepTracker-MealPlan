<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    tools:context=".ProgressFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Screen Title -->
        <TextView
            android:id="@+id/progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Progress"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stats_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/period_1w"
                    style="@style/PeriodTextStyle.Selected"
                    android:text="1W"
                    app:layout_constraintEnd_toStartOf="@id/period_1m"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/period_1m"
                    style="@style/PeriodTextStyle"
                    android:text="1M"
                    app:layout_constraintEnd_toStartOf="@id/period_6m"
                    app:layout_constraintStart_toEndOf="@id/period_1w"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/period_6m"
                    style="@style/PeriodTextStyle"
                    android:text="6M"
                    app:layout_constraintEnd_toStartOf="@id/period_1y"
                    app:layout_constraintStart_toEndOf="@id/period_1m"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/period_1y"
                    style="@style/PeriodTextStyle"
                    android:text="1Y"
                    app:layout_constraintEnd_toStartOf="@id/period_all"
                    app:layout_constraintStart_toEndOf="@id/period_6m"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/period_all"
                    style="@style/PeriodTextStyle"
                    android:text="All"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/period_1y"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/stat1_value"
                    style="@style/StatValue"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/period_1w"
                    tools:text="82" />

                <TextView
                    android:id="@+id/stat1_label"
                    style="@style/StatLabel"
                    android:text="Avg. Sleep Score"
                    app:layout_constraintEnd_toEndOf="@id/stat1_value"
                    app:layout_constraintStart_toStartOf="@id/stat1_value"
                    app:layout_constraintTop_toBottomOf="@id/stat1_value" />

                <TextView
                    android:id="@+id/stat2_value"
                    style="@style/StatValue"
                    app:layout_constraintEnd_toStartOf="@id/guideline2"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/stat1_value"
                    tools:text="7.8" />

                <TextView
                    android:id="@+id/stat2_label"
                    style="@style/StatLabel"
                    android:text="Avg. Sleep (hrs)"
                    app:layout_constraintEnd_toEndOf="@id/stat2_value"
                    app:layout_constraintStart_toStartOf="@id/stat2_value"
                    app:layout_constraintTop_toBottomOf="@id/stat2_value" />

                <TextView
                    android:id="@+id/stat3_value"
                    style="@style/StatValue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toTopOf="@id/stat1_value"
                    tools:text="12" />

                <TextView
                    android:id="@+id/stat3_label"
                    style="@style/StatLabel"
                    android:text="Goal Streak (days)"
                    app:layout_constraintEnd_toEndOf="@id/stat3_value"
                    app:layout_constraintStart_toStartOf="@id/stat3_value"
                    app:layout_constraintTop_toBottomOf="@id/stat3_value" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#4A4A4A"
                    app:layout_constraintBottom_toBottomOf="@id/stat1_label"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="@id/stat1_value" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#4A4A4A"
                    app:layout_constraintBottom_toBottomOf="@id/stat1_label"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toTopOf="@id/stat1_value" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.33" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.66" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Weekly Review Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/weekly_review_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stats_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:text="WEEKLY REVIEW"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekly_review_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="Sep 16, 2025 - Sep 22, 2025" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_weekly_review"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="8dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btn_open_calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:listitem="@layout/item_date_review" />

                    <ImageView
                        android:id="@+id/btn_open_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Open calendar picker"
                        android:padding="16dp"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@android:color/white" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Weight Journey Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/weight_journey_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weekly_review_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT JOURNEY"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/starting_weight_image"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/palceholder"
                            app:shapeAppearanceOverlay="@style/RoundedImage" />

                        <TextView
                            style="@style/StatLabel"
                            android:layout_marginTop="8dp"
                            android:text="BEFORE" />
                    </LinearLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/current_weight_image"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/palceholder"
                            app:shapeAppearanceOverlay="@style/RoundedImage" />

                        <TextView
                            style="@style/StatLabel"
                            android:layout_marginTop="8dp"
                            android:text="AFTER" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Achievements Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/achievements_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#2C2C2C"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weight_journey_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/achievements_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACHIEVEMENTS"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/achievements_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay consistent and unlock them all"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/achievements_title" />

                <TextView
                    android:id="@+id/achievements_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="@color/orange"
                    app:layout_constraintBottom_toBottomOf="@id/achievements_subtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/achievements_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/achievements_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/achievements_subtitle"
                    tools:itemCount="6"
                    tools:listitem="@layout/list_item_achievement" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

