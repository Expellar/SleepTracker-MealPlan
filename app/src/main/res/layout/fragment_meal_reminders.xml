<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".MealRemindersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Header / Toolbar -->
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/text_title_reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEAL REMINDERS"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/image_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_back" />

        <View
            android:id="@+id/divider_header"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="#505050"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_title_reminders" />

        <!-- Meal Reminders Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_meal_reminders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_settings_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_header">

            <!-- Breakfast Row -->
            <TextView
                android:id="@+id/label_breakfast"
                style="@style/ReminderLabelStyle"
                android:text="Breakfast"
                app:layout_constraintBottom_toBottomOf="@id/switch_breakfast"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/switch_breakfast" />

            <TextView
                android:id="@+id/text_time_breakfast"
                style="@style/ReminderTimeStyle"
                android:text="08:00 AM"
                app:layout_constraintBottom_toBottomOf="@id/switch_breakfast"
                app:layout_constraintEnd_toStartOf="@id/switch_breakfast"
                app:layout_constraintTop_toTopOf="@id/switch_breakfast" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_breakfast"
                style="@style/ReminderSwitchStyle"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider_meal_1"
                style="@style/ReminderDividerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_breakfast" />

            <!-- Lunch Row -->
            <TextView
                android:id="@+id/label_lunch"
                style="@style/ReminderLabelStyle"
                android:text="Lunch"
                app:layout_constraintBottom_toBottomOf="@id/switch_lunch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/switch_lunch" />

            <TextView
                android:id="@+id/text_time_lunch"
                style="@style/ReminderTimeStyle"
                android:text="01:00 PM"
                app:layout_constraintBottom_toBottomOf="@id/switch_lunch"
                app:layout_constraintEnd_toStartOf="@id/switch_lunch"
                app:layout_constraintTop_toTopOf="@id/switch_lunch" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_lunch"
                style="@style/ReminderSwitchStyle"
                android:checked="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_meal_1" />

            <View
                android:id="@+id/divider_meal_2"
                style="@style/ReminderDividerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_lunch" />

            <!-- Dinner Row -->
            <TextView
                android:id="@+id/label_dinner"
                style="@style/ReminderLabelStyle"
                android:text="Dinner"
                app:layout_constraintBottom_toBottomOf="@id/switch_dinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/switch_dinner" />

            <TextView
                android:id="@+id/text_time_dinner"
                style="@style/ReminderTimeStyle"
                android:text="07:00 PM"
                app:layout_constraintBottom_toBottomOf="@id/switch_dinner"
                app:layout_constraintEnd_toStartOf="@id/switch_dinner"
                app:layout_constraintTop_toTopOf="@id/switch_dinner" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_dinner"
                style="@style/ReminderSwitchStyle"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_meal_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
