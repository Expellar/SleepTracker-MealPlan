<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_drag_handle" />

    <!-- Recipe Title -->
    <TextView
        android:id="@+id/text_recipe_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Recipe Title"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Recipe Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/text_recipe_bottom_sheet_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe details will be shown here..."
            android:textColor="#E5E5EA"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>

</LinearLayout>