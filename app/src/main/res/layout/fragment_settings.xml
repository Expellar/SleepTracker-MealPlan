<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:scrollbars="none"
    android:fitsSystemWindows="true"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="#505050"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_title" />


        <TextView
            android:id="@+id/setting_profile"
            style="@style/SettingsItemStyle"
            android:layout_width="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="My Profile"
            app:drawableStartCompat="@drawable/ic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/divider" />

        <TextView
            android:id="@+id/setting_units"
            style="@style/SettingsItemStyle"
            android:layout_width="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Units of Measurement"
            app:drawableStartCompat="@drawable/ic_units"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_profile" />

        <TextView
            android:id="@+id/setting_notifications"
            style="@style/SettingsItemStyle"
            android:layout_width="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Notification Settings"
            app:drawableStartCompat="@drawable/ic_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_units" />

        <TextView
            android:id="@+id/setting_sound"
            style="@style/SettingsItemStyle"
            android:layout_width="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Sound"
            app:drawableStartCompat="@drawable/ic_sound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_notifications" />

        <TextView
            android:id="@+id/setting_reminders"
            style="@style/SettingsItemStyle"
            android:layout_width="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Reminders"
            app:drawableStartCompat="@drawable/ic_reminders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_sound" />

        <TextView
            android:id="@+id/setting_appearance"
            style="@style/SettingsItemStyle"
            android:layout_width="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Appearance"
            app:drawableStartCompat="@drawable/ic_theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_reminders" />

        <ImageView
            android:id="@+id/button_my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="352dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/setting_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/setting_profile"
            app:srcCompat="@drawable/ic_arrow_forward_white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>