<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:fitsSystemWindows="true"
    tools:context=".SleepRemindersFragment">

    <!-- Header / Toolbar -->
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back Button"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/text_title_sleep_reminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SLEEP REMINDERS"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_back" />

    <!-- Divider -->
    <View
        android:id="@+id/divider_header"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#505050"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_sleep_reminders" />

    <!-- Reminders Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_sleep_reminders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_settings_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_header">

        <!-- Bedtime Row -->
        <TextView
            android:id="@+id/label_bedtime"
            style="@style/ReminderLabelStyle"
            android:paddingVertical="16dp"
            android:text="Bedtime"
            app:layout_constraintEnd_toStartOf="@id/text_time_bedtime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_time_bedtime"
            style="@style/ReminderTimeStyle"
            android:text="10:30 PM"
            app:layout_constraintBottom_toBottomOf="@id/label_bedtime"
            app:layout_constraintEnd_toStartOf="@id/switch_bedtime"
            app:layout_constraintTop_toTopOf="@id/label_bedtime" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_bedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/label_bedtime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_bedtime" />

        <!-- Divider -->
        <View
            android:id="@+id/divider_sleep"
            style="@style/ReminderDividerStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_bedtime" />

        <!-- Wake-up Row -->
        <TextView
            android:id="@+id/label_wakeup"
            style="@style/ReminderLabelStyle"
            android:paddingVertical="16dp"
            android:text="Wake-up Alarm"
            app:layout_constraintEnd_toStartOf="@id/text_time_wakeup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_sleep" />

        <TextView
            android:id="@+id/text_time_wakeup"
            style="@style/ReminderTimeStyle"
            android:text="06:30 AM"
            app:layout_constraintBottom_toBottomOf="@id/label_wakeup"
            app:layout_constraintEnd_toStartOf="@id/switch_wakeup"
            app:layout_constraintTop_toTopOf="@id/label_wakeup" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_wakeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/label_wakeup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_wakeup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

