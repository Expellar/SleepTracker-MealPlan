<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:fitsSystemWindows="true"
    tools:context=".SleepTrackerFragment">

    <!-- Toolbar (Stays at the top) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Sleep Tracker"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Calendar Container (Stays at the top) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/date_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_open_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_date" />

        <ImageButton
            android:id="@+id/btn_open_calendar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="8dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Reminder button as a small square box -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_set_sleep_reminder"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="54dp"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="#3A3A3C"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_clock"
        app:iconSize="32dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/wake_up_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sleep_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/wake_up_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:paddingVertical="14dp"
        android:text="Wake Up"
        android:textColor="#FF9800"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_set_sleep_reminder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FF9800" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sleep_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF9800"
        android:paddingVertical="14dp"
        android:text="Sleep"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/wake_up_button"
        app:layout_constraintEnd_toStartOf="@id/btn_set_sleep_reminder"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- This NestedScrollView makes the main content scrollable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sleep_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Sleep Score Progress and all other views go here -->
            <ProgressBar
                android:id="@+id/sleep_score_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="86"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:rotation="-90"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/sleep_score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86"
                android:textColor="@android:color/white"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/sleep_score_label"
                app:layout_constraintEnd_toEndOf="@id/sleep_score_progress"
                app:layout_constraintStart_toStartOf="@id/sleep_score_progress"
                app:layout_constraintTop_toTopOf="@id/sleep_score_progress"
                app:layout_constraintVertical_chainStyle="packed" />
            <TextView
                android:id="@+id/sleep_score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Score"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/sleep_score_progress"
                app:layout_constraintEnd_toEndOf="@id/sleep_score_value"
                app:layout_constraintStart_toStartOf="@id/sleep_score_value"
                app:layout_constraintTop_toBottomOf="@id/sleep_score_value" />
            <TextView
                android:id="@+id/sleep_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawablePadding="8dp"
                android:text="SLEEP TIME"
                android:textColor="@android:color/darker_gray"
                app:drawableStartCompat="@drawable/ic_moon"
                app:drawableTint="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sleep_score_progress" />
            <TextView
                android:id="@+id/sleep_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="9 HRS"
                android:textColor="#A079FF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sleep_time_label" />
            <TextView
                android:id="@+id/wake_up_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawablePadding="8dp"
                android:text="WAKE UP TIME"
                android:textColor="@android:color/darker_gray"
                app:drawableStartCompat="@drawable/ic_alarm_clock"
                app:drawableTint="@android:color/darker_gray"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sleep_time_value" />
            <TextView
                android:id="@+id/wake_up_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="7:35 A.M."
                android:textColor="#FFC107"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/wake_up_label"
                app:layout_constraintStart_toStartOf="@id/wake_up_label"
                app:layout_constraintTop_toBottomOf="@id/wake_up_label" />
            <TextView
                android:id="@+id/time_in_bed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="TIME IN BED"
                android:textColor="@android:color/darker_gray"
                app:drawableStartCompat="@drawable/ic_zzz"
                app:drawableTint="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical"
                app:layout_constraintTop_toTopOf="@id/wake_up_label" />
            <TextView
                android:id="@+id/time_in_bed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="22:17 P.M."
                android:textColor="#FFC107"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/time_in_bed_label"
                app:layout_constraintStart_toStartOf="@id/time_in_bed_label"
                app:layout_constraintTop_toBottomOf="@id/time_in_bed_label" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!-- ✅ UPDATED Sound Options -->
            <LinearLayout
                android:id="@+id/sound_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wake_up_value">
                <!-- Nature -->
                <LinearLayout
                    android:id="@+id/option_nature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:id="@+id/icon_nature"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_nature"
                        app:tint="#AEAEB2"/>
                    <TextView
                        android:id="@+id/text_nature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Nature"
                        android:textColor="#AEAEB2"/>
                </LinearLayout>
                <!-- Rain -->
                <LinearLayout
                    android:id="@+id/option_rain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:id="@+id/icon_rain"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_rain"
                        app:tint="#AEAEB2"/>
                    <TextView
                        android:id="@+id/text_rain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Rain"
                        android:textColor="#AEAEB2"/>
                </LinearLayout>
                <!-- Focus -->
                <LinearLayout
                    android:id="@+id/option_focus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:id="@+id/icon_focus"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_focus"
                        app:tint="#AEAEB2"/>
                    <TextView
                        android:id="@+id/text_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Focus"
                        android:textColor="#AEAEB2"/>
                </LinearLayout>
                <!-- Meditation -->
                <LinearLayout
                    android:id="@+id/option_meditation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:id="@+id/icon_meditation"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_meditation"
                        app:tint="#AEAEB2"/>
                    <TextView
                        android:id="@+id/text_meditation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Meditation"
                        android:textColor="#AEAEB2"/>
                </LinearLayout>
                <!-- Calm -->
                <LinearLayout
                    android:id="@+id/option_calm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:id="@+id/icon_calm"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_calm"
                        app:tint="#AEAEB2"/>
                    <TextView
                        android:id="@+id/text_calm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Calm"
                        android:textColor="#AEAEB2"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

